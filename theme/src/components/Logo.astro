---
import {Image} from '@astrojs/image/components'
import logo from '../../assets/logo.svg'
import logoSmall from '../../assets/logo-small.svg'
---

<Image class="logo" src={logo} alt='logo' width={320} height={80}/>
<Image class="logoSmall" src={logoSmall} alt='logo' width={50} height={50}/>


<style>
	.logo {
		margin: 0;
		padding: 0;
		font-family: var(--theme-font-family-serif);
		font-size: var(--font-size-md);
		color: inherit;
	}

	.logoSmall {
		display: none;
	}
	
	.logo:hover {
		text-decoration: underline;
		cursor: pointer;
	}

	@media (max-width: 700px) {
		.logoSmall {
			display: block;
		}

		.logo {
			display: none;
		}
	}
</style>
